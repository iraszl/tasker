<div class="list-group-item d-flex <%= 'completed' if task.complete? %>" data-controller="task" data-id="<%= task.id %>">
  <% unless task.complete? %>
    <div class="mr-3"><i class="fa fa-grip-vertical text-muted"></i></div>
  <% end %>
  <div class="custom-control custom-checkbox mr-2">
    <input type="checkbox" class="custom-control-input" id="<%= dom_id(task) %>" data-reflex="change->task#toggle" data-id="<%= task.id %>" <%= 'checked' if task.complete? %>>
    <label for="<%= dom_id(task) %>" class="custom-control-label">
      <% if task.complete? %>
        <del>
          <%= task.name %>
        </del>
      <% else %>
        <%= task.name %>
      <% end %>
    </label>
    <div class="collapse" id="collapse-<%= task.id %>">
      <%= select_tag :assignee, options_from_collection_for_select(User.all, :id, :name), class: "custom-select" %>
    </div>
  </div>
  <div class="ml-auto d-flex">
    <a href="#" class="mr-2">
      <i class="fa fa-edit text-primary"></i>
    </a>
    <a href="" data-action="click->task#destroy" data-id="<%= task.id %>">
      <i class="fa fa-times text-danger"></i>
    </a>
  </div>
</div>